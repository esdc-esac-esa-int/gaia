# build.properties.int
#
# gaia-sl-tap
#

### int target flags & options
server.host=geadev.esac.esa.int
server.port=80
server.user=geaops
server.instdir=/home/geaops/gaiaComponents

app.name=gaia-sl-tap-dev

#Unique application identifier by context
app.id=D

#tmp dir
temp.path=/gaia/temp

### Server conf
app.host=geadev.esac.esa.int
app.context=tap-dev

### CAS conf
cas.service.url=https://geadev.esac.esa.int/tap-dev
cas.server.url=https://cas.cosmos.esa.int/cas

### TAP specific
stat.graphs.directory=/gaia/tests/statGraphs
#tap.results.path is not used
#tap.results.path=/gaia/tests/tap/results

### Database
db.server=gacsdb01.n1data.lan
db.port=8300
db.name=gacs
db.owner=postgres
# To set in local build.properties
#db.pwd=

#async.threads.number=20

## #UWS
#uws storage
uws.app.storage_dir=/gaia/storage/D

#uws max parallel jobs
uws.max_running_jobs=20

#Uploads enabled
uws.upload.enabled=true

#in bytes (aprox: 100 MB)
uws.upload.max_size=100000000

#database usage
uws.db.usage=true

#user quotas in bytes
uws.db.quota=1048576000
uws.files.quota=1048576000

#exec duration limit (0 no limit)
uws.exec_duration_limit=0

#Fixed base url
#Use this to avoid HttpServlertRequest parsing to obtain protocol, host and port
uws.fixed_base_url=https://geadev.esac.esa.int
#Nothing
#uws.fixed_base_url=

#Jobs Removal	
#Jobs removal check time (-1 to disable), by default: 24h (= 24*60*60*1000=86400000)
uws.jobs_removal_check_time=86400000
#Job removal comparison time (to remove old jobs), by default: 3 days (= 3*24*60*60*1000=259200000)
uws.jobs_delta_destruction_time=259200000
#orphan jobs and old empty directories comparison time: 30 days (= 30*24*60*60*1000=259200000)
uws.old_empty_dirs_cmp_time=2592000000

#Events removal
#Events removal check time (-1 to disable), by default: 24h (= 24*60*60*1000=86400000)
uws.events_removal_check_time=86400000
#Events removal comparison time (to remove old events), by default: 1 day (= 24*60*60*1000=86400000)
uws.events_delta_destruction_time=86400000

#Notifications removal
#Notifications removal check time (-1 to disable), by default: 24h (= 24*60*60*1000=86400000)
uws.notifications_removal_check_time=86400000
#Notifications removal comparison time (to remove old notifications). By default: 1 month (= 30*24*60*60*1000=2592000000)
uws.notifications_delta_destruction_time=2592000000

#uws ldap
uws.ldap.server=ldap://ldap.sciops.esa.int:389
uws.ldap.search_base=ou=People,o=esa.nl
uws.ldap.usr=cn=Euclid Applications Admin RO,ou=Special Users,o=esa.nl

### Directory where Target List files are uploaded to be processed 
target.file.upload.dir = /home/geaops/tmp

### ConvertToJson
convert.json.keystore.path = /home/geaops/jakarta-tomcat/conf/gacs.keystore
#convert.json.keystore.path = /home/geaops/.keystore
convert.json.tmp.dir = /home/geaops/tmp

### TAP XML results schema
vodataservice.schema.extension=http://geadev.esac.esa.int/tap-dev/xml/esaGaiaAttributes.xsd

### TAP functions
vofunctionsservice.schema=http://geadev.esac.esa.int/tap-dev/xml/voFunctionsService.xsd

